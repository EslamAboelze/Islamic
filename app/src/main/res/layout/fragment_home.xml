<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground_color"
    tools:context=".ui.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:lottie_autoPlay="true"
        android:layout_margin="10dp"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/quran"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imageView7"
                android:background="#F7E7CE"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/textView3"
                android:background="#F7E7CE"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="القران الكريم"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="bottom"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bearish"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="100dp" >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="مسبحه"
                android:gravity="center"
                android:background="#F7E7CE"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="bottom"/>

            <ImageView
                android:id="@+id/imageView8"
                android:background="#F7E7CE"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/tsp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/remembrance"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imageView9"
                android:background="#F7E7CE"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/allah" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:background="#F7E7CE"
                android:layout_height="30dp"
                android:text="الاذكار"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="bottom"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/storyoftheprphet"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imageView10"
                android:background="#F7E7CE"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/stories" />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:background="#F7E7CE"
                android:layout_height="30dp"
                android:text="قصص الانبياء"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="bottom"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>